<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart List</title>
    <meta name="color-scheme" content="dark">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
</head>
<body>
    <h2 class=" section make-it-left make-it-white-back make-it-dark make-it-rounded-top make-it-normal">Cart List - Static view</h2>
    
    <!-- Sorting and Pagination Controls at the top -->
    <section class="section">
        <div class="container make-it-dark">
            <div class="columns is-multiline is-centered">
                <!-- controls -->
                <div class="grid-container-2c66-by-1r make-it-semi-back make-it-normal make-it-rounded section">
                    <!-- Sorting Options -->
                    <div class="column is-12">
                        <div class="make-it-semi-back make-it-normal make-it-center">
                            <div class="make-it-semi-back make-it-normal make-it-center section">Sort by</div>
                            <a class="button" href="?page=1&limit={{limit}}&sort=cid">Cart ID</a>
                            <a class="button" href="?page=1&limit={{limit}}&sort=products">Number of Products</a>
                        </div>
                    </div>

                    <!-- Limit Dropdown -->
                    <div class="column is-12">
                        <div class="make-it-semi-back make-it-normal make-it-center">
                            <div class="make-it-semi-back make-it-normal make-it-center section">Items per page</div>
                            <div class="select">
                                <select id="limit-select">
                                    <option value="10" {{#if (eq limit '10')}}selected{{/if}}>10</option>
                                    <option value="20" {{#if (eq limit '20')}}selected{{/if}}>20</option>
                                    <option value="50" {{#if (eq limit '50')}}selected{{/if}}>50</option>
                                    <option value="100" {{#if (eq limit '100')}}selected{{/if}}>100</option>
                                </select>
                            </div>
                            <button class="button is-link" onclick="applyLimit()">Apply</button>
                        </div>
                    </div>

                </div>

                <!-- Pagination Controls -->
                <div class="column is-12">
                    <div class="make-it-white-back is-centered make-it-rounded-top grid-container-3c-by-1r" role="navigation" aria-label="pagination">
                        <!-- Previous Page Link -->
                        <a class="button section is-success" 
                        href="?page={{prevPage}}&limit={{limit}}&sort={{sort}}" 
                        {{#if (eq currentPage 1)}}disabled{{/if}}>Prev page</a>

                        <div class="section make-it-center make-it-rounded make-it-semi-back make-it-normal make-it-white">
                            Page {{currentPage}} of {{pageCount}}
                        </div>

                        <!-- Next Page Link -->
                        <a class="button section is-danger" 
                        href="?page={{nextPage}}&limit={{limit}}&sort={{sort}}" 
                        {{#if (eq currentPage pageCount)}}disabled{{/if}}>Next page</a>

                        <!-- Page Numbers -->
                        <ul class="pagination-list">
                            {{#each pages}}
                                <li>
                                    <a class="pagination-link" 
                                    href="?page={{this}}&limit={{../limit}}&sort={{../sort}}" 
                                    {{#if (eq this @root.currentPage)}}aria-current="page"{{/if}}>{{this}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Cart List -->
    <section class="section">
        <div class="container">
            <div class="columns is-multiline is-centered">
                {{#if carts.length}}
                    {{#each carts}}
                        <div class="column is-12-mobile is-12-desktop">
                            <div class="card">
                                <div class="card-content">
                                    <div class="content">
                                        <strong>Cart ID:</strong> {{this.cid}}
                                    </div>
                                    <div class="content">
                                        <strong>Products in Cart:</strong> {{this.products.length}}
                                    </div>
                                    <div class="content">
                                        <ul>
                                            {{#each this.products}}
                                                <li>{{this.pid}} - Quantity: {{this.quantity}}</li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <p class="has-text-centered">No carts available.</p>
                {{/if}}
            </div>
        </div>
    </section>

    <!-- Footer -->
    <section class="rt-general-page-footer make-it-semi-back make-it-normal make-it-dark">
        <div class="content">
            <div>Total Carts: {{itemCount}} - Total Pages: {{pageCount}}</div>
        </div>
    </section>

    <!-- Script for handling limit change -->
    <script>
        function applyLimit() {
            const selectedLimit = document.getElementById('limit-select').value;
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('limit', selectedLimit);
            urlParams.set('page', 1); // Reset to first page when changing limit
            window.location.search = urlParams.toString();
        }
    </script>
</body>
</html>
