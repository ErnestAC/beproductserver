<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="color-scheme" content="dark">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <title>Real-Time Carts</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        let currentPage = 1;
        let totalItems = 0;
        let itemsPerPage = 50; // maximum displayed at the same time in rt view
        let totalPages = 1;

        socket.on('updateCarts', (carts) => {
            totalItems = carts.length;
            totalPages = Math.ceil(totalItems / itemsPerPage);

            const cartList = document.getElementById('cartList');
            const cartCount = document.getElementById('cartCount');
            const paginationInfo = document.getElementById('paginationInfo');

            // Pagination logic
            const start = (currentPage - 1) * itemsPerPage;
            const end = start + itemsPerPage;
            const paginatedCarts = carts.slice(start, end);

            cartList.innerHTML = `
                <div class="make-it-rounded-top make-it-white-back make-it-normal">
                    <div class="grid-container">
                        ${paginatedCarts.map(cart => `
                            <div class="box make-it-white-back">
                                <h5 class="make-it-dark-back make-it-white make-it-center make-it-rounded-top make-it-normal">Cart ${cart.cid}</h5>
                                <table class="table make-it-dark is-hoverable is-fullwidth">
                                    <thead>
                                        <tr class="make-it-semi-back make-it-normal make-it-rounded">
                                            <th>PID</th>
                                            <th>Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        ${cart.products.map(product => `
                                            <tr>
                                                <td>${product.pid}</td>
                                                <td>${product.quantity}</td>
                                            </tr>
                                        `).join('')}
                                    </tbody>
                                </table>
                            </div>
                        `).join('')}
                    </div>
                </div>
            `;

            cartCount.textContent = `Displaying ${paginatedCarts.length} cart(s) | Page ${currentPage}`;
            paginationInfo.textContent = `Total Items: ${totalItems}, Total Pages: ${totalPages}`;
        });

        function changePage(step) {
            currentPage += step;
            if (currentPage < 1) currentPage = 1;
            if (currentPage > totalPages) currentPage = totalPages;
            socket.emit('requestCarts');
        }
    </script>
</head>
<body>
    <div class=" section make-it-dark make-it-white-back">Cart List - Realtime display</div>
    <div class="section">
        
        <div id="cartList"></div>
        <br>
        <div class="grid-container-3c-by-1r make-it-rounded make-it-white-back make-it-dark">
            <button class="button is-danger" onclick="changePage(-1)">Prev</button>
            <div class="content make-it-dark make-it-semi-back make-it-normal make-it-rounded make-it-center section" id="cartCount"></div>
            <button class="button is-success" onclick="changePage(1)">Next</button>
        </div>
        
        <div class="content make-it-dark make-it-rounded-top make-it-semi-back make-it-normal rt-general-page-footer" id="paginationInfo"></div>
    </div>
</body>
</html>
