<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="color-scheme" content="dark">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <title>Real-Time Carts</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        let currentPage = 1;
        let totalItems = 0;
        let itemsPerPage = 6; // Default value
        let totalPages = 1;

        socket.on('updateCarts', (carts) => {
            totalItems = carts.length;
            totalPages = Math.ceil(totalItems / itemsPerPage);

            const cartList = document.getElementById('cartList');
            const cartCount = document.getElementById('cartCount');
            const paginationInfo = document.getElementById('paginationInfo');

            // Pagination logic
            const start = (currentPage - 1) * itemsPerPage;
            const end = start + itemsPerPage;
            const paginatedCarts = carts.slice(start, end);

            cartList.innerHTML = `
                <div class="make-it-rounded-top make-it-white-back make-it-normal">
                    <div class="grid-container">
                        ${paginatedCarts.map(cart => `
                            <div class="box make-it-white-back">
                                <h5 class="make-it-dark-back make-it-white make-it-center make-it-rounded-top ">Cart ${cart.cid}</h5>
                                <table class="table make-it-dark make-it-small  is-hoverable is-fullwidth">
                                    <thead>
                                        <tr class="make-it-semi-back  make-it-rounded">
                                            <th>PID</th>
                                            <th>Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        ${cart.products.map(product => `
                                            <tr class="">
                                                <td>${product.pid}</td>
                                                <td>${product.quantity}</td>
                                            </tr>
                                        `).join('')}
                                    </tbody>
                                </table>
                            </div>
                        `).join('')}
                    </div>
                </div>
            `;

            cartCount.textContent = `Displaying ${paginatedCarts.length} cart(s) | Page ${currentPage}`;
            paginationInfo.textContent = `Total Items: ${totalItems}, Total Pages: ${totalPages}`;
        });

        function changePage(step) {
            currentPage += step;
            if (currentPage < 1) currentPage = 1;
            if (currentPage > totalPages) currentPage = totalPages;
            socket.emit('requestCarts');
        }

        function applyItemsPerPage() {
            const dropdown = document.getElementById('itemsPerPageDropdown');
            itemsPerPage = parseInt(dropdown.value, 10); // Get the selected value
            currentPage = 1; // Reset to the first page
            socket.emit('requestCarts');
        }
    </script>
</head>
<body>
    <h2 class=" section make-it-left make-it-white-back make-it-dark make-it-rounded-top make-it-normal">Cart List - Realtime display</h2>
    <div class="section">
        <div id="cartList">
            {{#each carts}}
                <div class="box make-it-white-back">
                    <h5 class="make-it-dark-back make-it-white make-it-center make-it-rounded-top ">Cart {{cid}}</h5>
                    <table class="table make-it-dark make-it-small  is-hoverable is-fullwidth">
                        <thead>
                            <tr class="make-it-semi-back  make-it-rounded">
                                <th>PID</th>
                                <th>Quantity</th>
                                <th>Title</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                                <tr class="">
                                    <td>{{pid}}</td>
                                    <td>{{quantity}}</td>
                                    <td>{{title}}</td>
                                    <td>{{stock}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            {{/each}}
        </div>

        <!-- Dropdown to select items per page -->
        <div class="field has-addons section">
            <div class="control">
                <div class="select is-small">
                    <select id="itemsPerPageDropdown">
                        <option value="6" selected>6 carts per page</option>
                        <option value="12">12 carts per page</option>
                        <option value="36">36 carts per page</option>
                    </select>
                </div>
            </div>
            <div class="control">
                <button class="button is-small  " onclick="applyItemsPerPage()">Apply</button>
            </div>
        </div>

        <br>
        <div class="grid-container-3c-by-1r make-it-rounded make-it-white-back make-it-dark">
            <button class="button is-small  " onclick="changePage(-1)">Prev</button>
            <div class="content make-it-dark make-it-small  make-it-semi-back  make-it-rounded make-it-center section" id="cartCount"></div>
            <button class="button is-small  " onclick="changePage(1)">Next</button>
        </div>
        
        <div class="content make-it-dark make-it-rounded-top make-it-semi-back  rt-general-page-footer" id="paginationInfo"></div>
    </div>
</body>
</html>
