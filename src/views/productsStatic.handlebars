<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <meta name="color-scheme" content="dark">
</head>
<body>
    <h2 class=" section make-it-left make-it-white-back make-it-dark make-it-rounded-top make-it-normal">Product List - Static view</h2>

    <script>
        const isLoggedIn = {{#if user}}true{{else}}false{{/if}};
        const userCartId = {{#if user}}"{{user.cartId}}"{{else}}null{{/if}};
    </script>

    <!-- Sorting and Pagination Controls at the top -->
    <section class="section">
        <div class="container make-it-dark">
            <div class="columns is-multiline is-centered">
                <!-- controls -->
                <div class="grid-container-2c66-by-1r make-it-semi-back  make-it-rounded section">
                    <!-- Sorting Options -->
                        <div class="make-it-semi-back grid-container-6c-by-1r make-it-center make-it-small">
                            <a class="navbar-item is-small " href="?page=1&limit={{limit}}&sort=title&sortOrder=desc">Title desc</a>
                            <a class="navbar-item is-small " href="?page=1&limit={{limit}}&sort=price&sortOrder=asc">Price asc</a>
                            <a class="navbar-item is-small " href="?page=1&limit={{limit}}&sort=price&sortOrder=desc">Price desc</a>
                            <a class="navbar-item is-small " href="?page=1&limit={{limit}}&sort=stock&sortOrder=asc">Stock asc</a>
                            <a class="navbar-item is-small " href="?page=1&limit={{limit}}&sort=stock&sortOrder=desc">Stock desc</a>
                        </div>

                    <!-- Limit Dropdown -->
                    <div class="">
                        <div class="grid-container-2c-by-1r make-it-semi-back make-it-normal make-it-center">
                            <div class="select is-small">
                                <select id="limit-select">
                                    <option value="10" {{#if (eq limit '10')}}selected{{/if}}>10</option>
                                    <option value="20" {{#if (eq limit '20')}}selected{{/if}}>20</option>
                                    <option value="50" {{#if (eq limit '50')}}selected{{/if}}>50</option>
                                </select>
                            </div>
                            <button class="button is-small  is-warning " onclick="applyLimit()">Apply</button>
                        </div>
                    </div>
                </div>

                <!-- Pagination Controls -->
                <div class="column is-10">
                    <div class="make-it-dark-back is-centered make-it-rounded-top grid-container-3c-by-1r-special" role="navigation" aria-label="pagination">
                        <!-- Previous Page Link -->
                        <a class="button is-small  section " 
                        href="?page={{prevPage}}&limit={{limit}}&sort={{sort}}&sortOrder={{sortOrder}}" 
                        {{#if (eq currentPage 1)}}disabled{{/if}}>Prev page</a>

                        <div class="section make-it-center make-it-rounded make-it-semi-back  make-it-dark">
                            Page {{currentPage}} of {{totalPages}}
                        </div>

                        <!-- Next Page Link -->
                        <a class="button is-small  section " 
                        href="?page={{nextPage}}&limit={{limit}}&sort={{sort}}&sortOrder={{sortOrder}}" 
                        {{#if (eq currentPage totalPages)}}disabled{{/if}}>Next page</a>

                        <!-- Page Numbers -->
                        <ul class="pagination-list">
                            {{#each pages}}
                                <li>
                                    <a class="pagination-link" 
                                    href="?page={{this}}&limit={{../limit}}&sort={{../sort}}&sortOrder={{../sortOrder}}" 
                                    {{#if (eq this @root.currentPage)}}aria-current="page"{{/if}}>{{this}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
    </section>

    <!-- Product List -->
    <section class="section">
        <div class="container">
            <div class="columns is-multiline is-centered">
                {{#if products.length}}
                    {{#each products}}
                        <div class="column is-12-mobile is-3-desktop">
                            <div class="make-it-rounded-top card-title-container make-it-white-back make-it-left">
                                <div>
                                    {{this.title}}
                                </div>
                            </div>
                            <div class="make-it-semi-back">
                                <div class="section">
                                    <div class="make-it-rounded">
                                        <img src={{this.imageURL}} alt={{this.title}}>
                                    </div>
                                    <div class="card-category-badge-prebuilt make-it-left make-it-rounded">
                                            {{this.category}}
                                    </div>
                                    <div class="columns make-it-white-back make-it-rounded make-it-dark make-it-small section">
                                        <div class="column is-6 make-it-left">
                                            <p><b>Price:</b>${{this.price}}</p>
                                            <p><b>Stock:</b> {{this.stock}}</p>
                                            <p><b>Pieces:</b> {{this.pieces}}</p>
                                            <p><b>Code:</b> {{this.code}}</p>
                                        </div>
                                        <div class="column is-6 make-it-center">
                                            <p><b>Motor:</b> {{#if this.motorizable}} Yes {{else}} No {{/if}}</p>
                                            <p><b>Lights:</b> {{#if this.lighting}} Yes {{else}} No {{/if}}</p>
                                        </div>
                                    </div>
                                    <div class="make-it-right section">
                                        <button 
                                          class="button is-small is-warning add-to-cart-btn" 
                                          data-product='{{{stringify this}}}'>
                                          Add to Cart
                                        </button>
                                    </div>
                                </div>
                                <div class="make-it-dark make-it-small section make-it-center">PID: {{this.pid}}</div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <p class="has-text-centered make-it-white section">No products found in the database.</p>
                {{/if}}
            </div>
        </div>
    </section>

    <!-- Footer -->
    <section class="rt-general-page-footer make-it-semi-back make-it-normal make-it-dark">
        <div class="content">
            <div>Total Items: {{totalItems}} - Total Pages: {{totalPages}}</div>
        </div>
    </section>

    <script>
        function applyLimit() {
            const selectedLimit = document.getElementById('limit-select').value;
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('limit', selectedLimit);
            urlParams.set('page', 1);
            window.location.search = urlParams.toString();
        }

        document.querySelectorAll(".add-to-cart-btn").forEach((button) => {
            button.addEventListener("click", async () => {
                const product = JSON.parse(button.getAttribute("data-product"));

                if (isLoggedIn && userCartId) {
                    try {
                        const token = localStorage.getItem("token");
                        const response = await fetch(`/api/carts/${userCartId}/product/${product.pid}`, {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                                Authorization: `Bearer ${token}`
                            },
                            body: JSON.stringify({ quantity: 1 })
                        });

                        if (response.ok) {
                            console.log("added product to cart")
                        } else {
                            const err = await response.json();
                            alert(`Failed to add to cart: ${err.message}`);
                        }
                    } catch (err) {
                        alert("Error adding product to cart.");
                        console.error(err);
                    }
                } else {
                    let cart = JSON.parse(localStorage.getItem("guestCart") || "[]");
                    const existing = cart.find(item => item.pid === product.pid);

                    if (existing) {
                        existing.quantity += 1;
                    } else {
                        cart.push({
                            pid: product.pid,
                            title: product.title,
                            price: product.price,
                            quantity: 1
                        });
                    }

                    localStorage.setItem("guestCart", JSON.stringify(cart));
                    console.log("added product to cart")
                }
            });
        });
    </script>
</body>
</html>
