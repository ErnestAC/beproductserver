<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <meta name="color-scheme" content="dark">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
</head>
<body>
    <h2 class="subtitle section make-it-left make-it-white-back make-it-dark">Product List - Static view</h2>
    
    <!-- Sorting and Pagination Controls at the top -->
    <section class="section">
        <div class="container">
            <div class="columns is-multiline is-centered">
                <!-- Sorting Options -->
                <div class="column is-12">
                    <h3 class="title is-4">Sort By</h3>
                    <div class="buttons">
                        <a class="button is-primary" href="?page=1&limit={{limit}}&sort=title&sortOrder=asc">Title (A-Z)</a>
                        <a class="button is-primary" href="?page=1&limit={{limit}}&sort=title&sortOrder=desc">Title (Z-A)</a>
                        <a class="button is-primary" href="?page=1&limit={{limit}}&sort=price&sortOrder=asc">Price (Low to High)</a>
                        <a class="button is-primary" href="?page=1&limit={{limit}}&sort=price&sortOrder=desc">Price (High to Low)</a>
                        <a class="button is-primary" href="?page=1&limit={{limit}}&sort=stock&sortOrder=asc">Stock (Low to High)</a>
                        <a class="button is-primary" href="?page=1&limit={{limit}}&sort=stock&sortOrder=desc">Stock (High to Low)</a>
                    </div>
                </div>

                <!-- Pagination Controls -->
                <div class="column is-12">
                    <div class="pagination is-centered" role="navigation" aria-label="pagination">
                        <a class="pagination-previous" href="?page={{prevPage}}&limit={{limit}}&sort={{sort}}&sortOrder={{sortOrder}}" {{#if hasPrevPage}}disabled{{/if}}>Previous</a>
                        <a class="pagination-next" href="?page={{nextPage}}&limit={{limit}}&sort={{sort}}&sortOrder={{sortOrder}}" {{#if hasNextPage}}disabled{{/if}}>Next</a>
                        <ul class="pagination-list">
                            {{#each pages}}
                                <li>
                                    <a class="pagination-link" href="?page={{this}}&limit={{limit}}&sort={{sort}}&sortOrder={{sortOrder}}" {{#if (eq this @root.currentPage)}}aria-current="page"{{/if}}>{{this}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Product List -->
    <section class="section">
        <div class="container">
            <div class="columns is-multiline is-centered">
                {{#if products.length}}
                    {{#each products}}
                        <div class="column is-12-mobile is-4-desktop">
                            <div class="card">
                                <div class="card-content">
                                    <div class="content">
                                        <strong>PID:</strong> {{this.pid}}
                                    </div>
                                    <div class="content">
                                        <strong>{{this.title}} - ${{this.price}}</strong>
                                        <p><strong>Stock:</strong> {{this.stock}}</p>
                                        <p><strong>Motorizable:</strong> {{#if this.motorizable}} Yes {{else}} No {{/if}}</p>
                                        <p><strong>Lighting:</strong> {{#if this.lighting}} Yes {{else}} No {{/if}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <p class="has-text-centered">No products available.</p>
                {{/if}}
            </div>
        </div>
    </section>

</body>
</html>
